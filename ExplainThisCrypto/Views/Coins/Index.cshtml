@model IEnumerable<ExplainThisCrypto.Models.Coin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Symbol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo_url)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Logo_url)" style="max-width:100px;"/> 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoinId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoinId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoinId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
