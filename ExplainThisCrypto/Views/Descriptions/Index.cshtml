@model IEnumerable<ExplainThisCrypto.Models.Description>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Descriptions" asp-action="Index">
    <p>
        Coin Name: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coins)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coins.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DescriptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DescriptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DescriptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
